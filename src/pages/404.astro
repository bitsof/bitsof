---
import MainLayout from '../layouts/MainLayout.astro';
import { SITE_TITLE } from '../consts';
---

<MainLayout title={`404: Not Found | ${SITE_TITLE}`} description="The page you were looking for could not be found.">
  <div class="text-center py-16 max-w-3xl mx-auto">
    <h1 class="text-5xl mb-4 text-white">404: Not found</h1>
    <p class="text-xl mb-8 text-gray-400">Sorry, the page you were looking for doesn't exist or has been moved.</p>
    <div class="flex gap-4 justify-center">
      <a href="/" class="inline-block bg-white text-black py-3 px-6 rounded-lg font-semibold hover:bg-gray-200 transition-all">Go Home</a>
      <a href="/blog" class="inline-block bg-white text-black py-3 px-6 rounded-lg font-semibold hover:bg-gray-200 transition-all">View Blog</a>
    </div>
  </div>
</MainLayout>

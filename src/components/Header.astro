---
import Navigation from './Navigation.astro';
---

<header class="fixed top-0 left-0 right-0 py-6 px-12 max-md:px-6 bg-black z-[1000]">
	<div class="flex items-center justify-between">
		<Navigation />

		<!-- Hamburger Menu -->
		<button id="menu-toggle" class="flex flex-col gap-1.5 p-2 hover:opacity-70 transition-opacity" aria-label="Toggle menu">
			<span class="block w-6 h-0.5 bg-white transition-transform duration-300" id="bar1"></span>
			<span class="block w-6 h-0.5 bg-white transition-opacity duration-300" id="bar2"></span>
			<span class="block w-6 h-0.5 bg-white transition-transform duration-300" id="bar3"></span>
		</button>
	</div>
</header>

<!-- Overlay -->
<div id="menu-overlay" class="fixed inset-0 bg-black/50 z-[1001] opacity-0 pointer-events-none transition-opacity duration-300"></div>

<!-- Sidebar -->
<div id="menu-sidebar" class="fixed top-0 right-0 h-full w-72 bg-black border-l border-gray-800 z-[1002] transform translate-x-full transition-transform duration-300">
	<div class="p-6">
		<button id="menu-close" class="absolute top-6 right-6 p-2 hover:opacity-70 transition-opacity" aria-label="Close menu">
			<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
			</svg>
		</button>

		<nav class="mt-16 flex flex-col gap-6">
			<div>
				<h3 class="text-gray-500 text-sm font-medium mb-3">What We Do</h3>
				<div class="flex flex-col gap-3">
					<a href="/" class="text-lg text-gray-300 hover:text-white transition-colors">&gt; BitsOf</a>
					<a href="https://yapmastery.com" class="text-lg text-gray-300 hover:text-white transition-colors" target="_blank" rel="noopener noreferrer">&gt; YapMastery</a>
					<a href="https://yapdo.xyz" class="text-lg text-gray-300 hover:text-white transition-colors" target="_blank" rel="noopener noreferrer">&gt; YapDo</a>
				</div>
			</div>

			<div class="border-t border-gray-800 pt-6">
				<h3 class="text-gray-500 text-sm font-medium mb-3">Legal</h3>
				<div class="flex flex-col gap-3">
					<a href="/terms" class="text-lg text-gray-300 hover:text-white transition-colors">Terms and Conditions</a>
					<a href="/privacy" class="text-lg text-gray-300 hover:text-white transition-colors">Privacy Policy</a>
				</div>
			</div>
		</nav>
	</div>
</div>

<script>
	const menuToggle = document.getElementById('menu-toggle');
	const menuClose = document.getElementById('menu-close');
	const menuSidebar = document.getElementById('menu-sidebar');
	const menuOverlay = document.getElementById('menu-overlay');

	function openMenu() {
		menuSidebar?.classList.remove('translate-x-full');
		menuOverlay?.classList.remove('opacity-0', 'pointer-events-none');
		document.body.style.overflow = 'hidden';
	}

	function closeMenu() {
		menuSidebar?.classList.add('translate-x-full');
		menuOverlay?.classList.add('opacity-0', 'pointer-events-none');
		document.body.style.overflow = '';
	}

	menuToggle?.addEventListener('click', openMenu);
	menuClose?.addEventListener('click', closeMenu);
	menuOverlay?.addEventListener('click', closeMenu);
</script>

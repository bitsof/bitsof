{
  "version": 2,
  "builds": [
    { "src": "dist/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/?$", "dest": "/dist/index.html" },
    { "src": "^/([^/.]+)/([^/.]+)/([^/.]+)$", "dest": "/dist/$1/$2/$3.html" },
    { "src": "^/([^/.]+)/([^/.]+)$", "dest": "/dist/$1/$2.html" },
    { "src": "^/([^/.]+)$", "dest": "/dist/$1.html" },
    { "src": "/(.+)", "dest": "/dist/$1" }
  ]
} 